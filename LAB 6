----------------------------------------------------------------------------------------------------

#include <iostream>
using namespace std;
int main()
{
	int n;
	// for loop with contimue
	for (n = 10; n > 0; n--){
		if (n == 5) continue;
		cout << n << ", ";
	}
	cout << "Fire ! \n\n";
	return 0;
}

