/*#include<iostream>
using namespace std;

int main()
{
	int a = 6, j, k, l;
	// Nested FOR LOOP
	for (int i = 0; i < a; i++)
	{
		l = 1;
		// SPACES
		for (j = 1; j < (a - i); j++)
		{
			cout << "   ";
		}
		for (k = 0; k <= i; k++)
		{
			cout << "      " << l;
			l = l * (i - k) / (k + 1);
		}
		cout << endl << endl;
	}
	cout << endl;
	return 0;
}*/

