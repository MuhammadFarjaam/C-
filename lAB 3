#include <iostream>
using namespace std;
int main()
{
	float l, w;
	cout << "Enter Length ";
	cin >> l;
	cout << "\nEnter Width ";
	cin >> w;
	cout << "\nArea =" << l*w;
	cout << "\nPerimeter =" << 2 * (l + w) << endl;
	return 0;
}

