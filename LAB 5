#include<iostream>
using namespace std;
int main()
{
	int input;
	cout << "Semester 2 has five papers." << endl;
	cout << "Enter any Number 1 to 5 to select paper \n";
	cin >> input;
	cout << endl;
	switch (input)
	{
	case 1:
		cout << "Paper 1 is Communication Skills\n";
		break;
	case 2:
		cout << "Paper 2 is Applied Mathematics \n";
		break;
	case 3:
		cout << "Paper 3 is Programming Fundamentals \n";
		break;
	case 4:
		cout << "Paper 4 is Electronics & Communication Technology \n";
		break;
	case 5:
		cout << "Paper 5 is Introduction to Sociology \n";
		break;
	default:
		cout << "Not a valid input";
		break;
	}
	return 0;
}


