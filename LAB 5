#include <iostream>
using namespace std;
int main(){
	int Class, Subject;
	cout << "Enter Class <1-3> " << endl;
	cin >> Class;
	//Switch (------If Else Inside-------)
	switch (Class)
	{
	case 1:
	{
		cout << "\n\nEnter No of failed Subjects"<<endl;
		cin >> Subject;
		if (Subject <= 3)
		{
			cout << "\nStudent Will Be Given 5 marks each subject" << endl;
		}
		else
			cout << "\nNo Grace marks Will be Given" << endl;
	}
		break;
	case 2:
	{
			  cout << "\n\nEnter No of failed Subjects" << endl;
			  cin >> Subject;
			  if (Subject <= 2)
			  {
				  cout << "\nStudent Will Be Given 4 marks each subject" << endl;
			  }
			  else
				  cout << "\nNo Grace marks Will be Given" << endl;
	}
		break;
	case 3:
	{
			  cout << "\n\nEnter No of failed Subjects" << endl;
			  cin >> Subject;
			  if (Subject == 1)
			  {
				  cout << "\nStudent Will Be Given 5 marks each subject" << endl;
			  }
			  else
				  cout << "\nNo Grace marks Will be Given" << endl;
	}
		break;

	}

}

